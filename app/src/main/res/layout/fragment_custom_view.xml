<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zkb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <br.com.programadordeelite.gdc.codelab.userinterface.customview.PasswordItem
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            zkb:passwordCounterEnabled="true"
            zkb:passwordCounterMaxLength="32"
            zkb:passwordCounterMinLength="4"
            zkb:passwordErrorText="Texto de Erro"
            zkb:passwordForgottenButtonEnabled="true"
            zkb:passwordForgottenButtonText="Esqueceu?"
            zkb:passwordHintText="Password"
            zkb:passwordSuccessText="Helper Text!"
            zkb:passwordSuccessTextEnabled="true" />

        <br.com.programadordeelite.gdc.codelab.userinterface.customview.PasswordItemOutlined
            android:id="@+id/pwdOutlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            zkb:passwordCounterEnabled="true"
            zkb:passwordCounterMaxLength="32"
            zkb:passwordCounterMinLength="4"
            zkb:passwordErrorText="Texto de Erro"
            zkb:passwordForgottenButtonEnabled="true"
            zkb:passwordForgottenButtonText="Esqueceu?"
            zkb:passwordHintText="Password"
            zkb:passwordSuccessText="Helper Text!"
            zkb:passwordSuccessTextEnabled="true" />
    </LinearLayout>

</ScrollView>